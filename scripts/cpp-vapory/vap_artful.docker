FROM ubuntu:artful

RUN apt update
RUN apt -y install libleveldb-dev cmake g++ git
RUN git clone --recursive https://github.com/vaporyco/cpp-vapory --branch develop --single-branch --depth 1
RUN mkdir /build && cd /build && cmake /cpp-vapory -DCMAKE_BUILD_TYPE=RelWithDebInfo -DTOOLS=Off -DTESTS=Off
RUN cd /build && make vap
